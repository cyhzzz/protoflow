{
  "version": "2.0.0",
  "app": {
    "id": "smart-customer-service",
    "name": "智能客服",
    "version": "2.0.0",
    "description": "银行智能客服系统 - ProtoFlow原型示例",
    "pages": [
      {
        "id": "home",
        "name": "首页",
        "description": "智能客服首页 - 展示功能宫格和快捷入口",
        "componentTree": {
          "type": "safeArea",
          "children": [
            {
              "type": "statusBar",
              "style": "dark",
              "showTime": true,
              "showBattery": true,
              "showSignal": true,
              "networkType": "wifi",
              "height": 44,
              "backgroundColor": "#000000",
              "textColor": "#FFFFFF"
            },
            {
              "type": "navBar",
              "title": "智能客服",
              "titleStyle": {
                "fontSize": 18,
                "fontWeight": "semibold",
                "color": "#000000"
              },
              "backgroundColor": "#FFFFFF",
              "borderless": false,
              "height": 44
            },
            {
              "type": "carousel",
              "autoPlay": true,
              "interval": 4000,
              "showIndicator": true,
              "indicatorStyle": "dots",
              "loop": true,
              "aspectRatio": 1.78,
              "items": [
                {
                  "type": "image",
                  "src": "/images/banner1.jpg",
                  "title": "新功能上线",
                  "subtitle": "智能客服全面升级"
                },
                {
                  "type": "image",
                  "src": "/images/banner2.jpg",
                  "title": "快捷服务",
                  "subtitle": "随时随地查询业务"
                }
              ]
            },
            {
              "type": "grid",
              "rowCount": 2,
              "colCount": 4,
              "spacing": 16,
              "padding": {
                "top": 24,
                "bottom": 24,
                "left": 16,
                "right": 16
              },
              "scrollDirection": "vertical",
              "scrollable": true,
              "items": [
                {
                  "icon": "/icons/branch-query.png",
                  "text": "开户行查询",
                  "onClickAction": {
                    "type": "navigateTo",
                    "pageId": "query-branch"
                  }
                },
                {
                  "icon": "/icons/transfer-progress.png",
                  "text": "转账进度",
                  "onClickAction": {
                    "type": "navigateTo",
                    "pageId": "transfer-progress"
                  }
                },
                {
                  "icon": "/icons/account-fee.png",
                  "text": "账户管理费",
                  "onClickAction": {
                    "type": "navigateTo",
                    "pageId": "account-fee"
                  }
                },
                {
                  "icon": "/icons/more-tools.png",
                  "text": "更多工具",
                  "onClickAction": {
                    "type": "showActionSheet",
                    "actionSheet": {
                      "title": "选择工具",
                      "items": [
                        {
                          "text": "计算器",
                          "onClickAction": {
                            "type": "showToast",
                            "toast": {
                              "message": "打开计算器",
                              "icon": "info"
                            }
                          }
                        },
                        {
                          "text": "汇率查询",
                          "onClickAction": {
                            "type": "showToast",
                            "toast": {
                              "message": "打开汇率查询",
                              "icon": "info"
                            }
                          }
                        },
                        {
                          "text": "利率查询",
                          "onClickAction": {
                            "type": "showToast",
                            "toast": {
                              "message": "打开利率查询",
                              "icon": "info"
                            }
                          }
                        }
                      ],
                      "cancelButton": {
                        "text": "取消"
                      }
                    }
                  }
                },
                {
                  "icon": "/icons/loan-query.png",
                  "text": "贷款查询",
                  "onClickAction": {
                    "type": "navigateTo",
                    "pageId": "loan-query"
                  }
                },
                {
                  "icon": "/icons/investment-query.png",
                  "text": "理财查询",
                  "onClickAction": {
                    "type": "navigateTo",
                    "pageId": "investment-query"
                  }
                },
                {
                  "icon": "/icons/card-service.png",
                  "text": "卡片服务",
                  "onClickAction": {
                    "type": "navigateTo",
                    "pageId": "card-service"
                  }
                },
                {
                  "icon": "/icons/security-center.png",
                  "text": "安全中心",
                  "onClickAction": {
                    "type": "navigateTo",
                    "pageId": "security-center"
                  }
                }
              ]
            },
            {
              "type": "card",
              "title": "我关心的",
              "subtitle": "热点问题快速入口",
              "elevation": 2,
              "borderRadius": 12,
              "backgroundColor": "#FFFFFF",
              "padding": {
                "top": 16,
                "bottom": 16,
                "left": 16,
                "right": 16
              },
              "children": [
                {
                  "type": "list",
                  "items": [
                    {
                      "type": "iconText",
                      "title": "转账汇款到账时间？",
                      "icon": "/icons/transfer.png",
                      "accessory": "arrow",
                      "onClickAction": {
                        "type": "navigateTo",
                        "pageId": "answer-transfer-time"
                      }
                    },
                    {
                      "type": "iconText",
                      "title": "手机银行转账汇款手续费全免吗？",
                      "icon": "/icons/fee.png",
                      "accessory": "arrow",
                      "onClickAction": {
                        "type": "navigateTo",
                        "pageId": "answer-transfer-fee"
                      }
                    },
                    {
                      "type": "iconText",
                      "title": "如何查询13个月前的交易明细？",
                      "icon": "/icons/transaction.png",
                      "accessory": "arrow",
                      "onClickAction": {
                        "type": "navigateTo",
                        "pageId": "transaction-query"
                      }
                    },
                    {
                      "type": "iconText",
                      "title": "对最近的交易有疑问？",
                      "icon": "/icons/question.png",
                      "accessory": "arrow",
                      "onClickAction": {
                        "type": "navigateTo",
                        "pageId": "transaction-dispute"
                      }
                    },
                    {
                      "type": "iconText",
                      "title": "什么时候可以打印申购确认书？",
                      "icon": "/icons/document.png",
                      "accessory": "arrow",
                      "onClickAction": {
                        "type": "navigateTo",
                        "pageId": "answer-print-confirm"
                      }
                    },
                    {
                      "type": "iconText",
                      "title": "赎回资金的到账时间在哪里查询？",
                      "icon": "/icons/time.png",
                      "accessory": "arrow",
                      "onClickAction": {
                        "type": "navigateTo",
                        "pageId": "answer-redeem-time"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      },
      {
        "id": "query-branch",
        "name": "开户行查询",
        "description": "查询开户行信息",
        "componentTree": {
          "type": "safeArea",
          "children": [
            {
              "type": "navBar",
              "title": "开户行查询",
              "titleStyle": {
                "fontSize": 18,
                "fontWeight": "semibold",
                "color": "#000000"
              },
              "leftItems": [
                {
                  "type": "back",
                  "tintColor": "#000000",
                  "onClickAction": {
                    "type": "back"
                  }
                }
              ],
              "backgroundColor": "#FFFFFF",
              "borderless": false,
              "height": 44
            },
            {
              "type": "input",
              "inputType": "text",
              "placeholder": "请输入卡号或账号",
              "maxLength": 19,
              "style": {
                "fontSize": 16,
                "color": "#000000",
                "backgroundColor": "#FFFFFF",
                "borderRadius": 8,
                "borderWidth": 1,
                "borderColor": "#E5E5E5",
                "padding": {
                  "top": 12,
                  "bottom": 12,
                  "left": 16,
                  "right": 16
                }
              }
            },
            {
              "type": "button",
              "text": "查询",
              "buttonType": "primary",
              "size": "large",
              "onClickAction": {
                "type": "request",
                "request": {
                  "url": "/api/query-branch",
                  "method": "POST",
                  "successAction": {
                    "type": "showToast",
                    "toast": {
                      "message": "查询成功",
                      "duration": 2000,
                      "position": "center",
                      "icon": "success"
                    }
                  },
                  "errorAction": {
                    "type": "showToast",
                    "toast": {
                      "message": "查询失败，请检查卡号",
                      "duration": 2000,
                      "position": "center",
                      "icon": "error"
                    }
                  }
                }
              }
            }
          ]
        }
      },
      {
        "id": "transaction-query",
        "name": "交易查询",
        "description": "查询交易明细",
        "componentTree": {
          "type": "safeArea",
          "children": [
            {
              "type": "navBar",
              "title": "交易查询",
              "titleStyle": {
                "fontSize": 18,
                "fontWeight": "semibold",
                "color": "#000000"
              },
              "leftItems": [
                {
                  "type": "back",
                  "tintColor": "#000000",
                  "onClickAction": {
                    "type": "back"
                  }
                }
              ],
              "backgroundColor": "#FFFFFF",
              "borderless": false,
              "height": 44
            },
            {
              "type": "picker",
              "pickerType": "date",
              "placeholder": "选择查询日期",
              "format": "YYYY-MM-DD",
              "minDate": "2020-01-01",
              "maxDate": "2026-12-31"
            },
            {
              "type": "button",
              "text": "查询",
              "buttonType": "primary",
              "size": "large",
              "onClickAction": {
                "type": "request",
                "request": {
                  "url": "/api/transaction-query",
                  "method": "POST",
                  "successAction": {
                    "type": "showToast",
                    "toast": {
                      "message": "查询成功",
                      "duration": 2000,
                      "position": "center",
                      "icon": "success"
                    }
                  },
                  "errorAction": {
                    "type": "showToast",
                    "toast": {
                      "message": "查询失败",
                      "duration": 2000,
                      "position": "center",
                      "icon": "error"
                    }
                  }
                }
              }
            },
            {
              "type": "card",
              "title": "最近交易",
              "elevation": 1,
              "borderRadius": 8,
              "backgroundColor": "#FFFFFF",
              "padding": {
                "top": 16,
                "bottom": 16,
                "left": 16,
                "right": 16
              },
              "children": [
                {
                  "type": "list",
                  "items": [
                    {
                      "type": "iconText",
                      "title": "转账 - 收入",
                      "subtitle": "2026-02-25 14:30",
                      "icon": "/icons/income.png",
                      "accessory": "arrow"
                    },
                    {
                      "type": "iconText",
                      "title": "消费 - 支出",
                      "subtitle": "2026-02-24 09:15",
                      "icon": "/icons/expense.png",
                      "accessory": "arrow"
                    }
                  ]
                }
              ]
            }
          ]
        }
      },
      {
        "id": "answer-transfer-time",
        "name": "转账到账时间",
        "description": "转账到账时间问答页",
        "componentTree": {
          "type": "safeArea",
          "children": [
            {
              "type": "navBar",
              "title": "转账到账时间",
              "titleStyle": {
                "fontSize": 18,
                "fontWeight": "semibold",
                "color": "#000000"
              },
              "leftItems": [
                {
                  "type": "back",
                  "tintColor": "#000000",
                  "onClickAction": {
                    "type": "back"
                  }
                }
              ],
              "backgroundColor": "#FFFFFF",
              "borderless": false,
              "height": 44
            },
            {
              "type": "card",
              "elevation": 1,
              "borderRadius": 8,
              "backgroundColor": "#FFFFFF",
              "padding": {
                "top": 20,
                "bottom": 20,
                "left": 20,
                "right": 20
              },
              "children": [
                {
                  "type": "text",
                  "content": "转账到账时间说明",
                  "style": {
                    "fontSize": 20,
                    "fontWeight": "bold",
                    "color": "#000000"
                  }
                },
                {
                  "type": "text",
                  "content": "1. 同行转账：实时到账\n2. 跨行转账：一般1-3个工作日\n3. 异地转账：一般2-4个工作日\n\n如有疑问，请联系客服。",
                  "style": {
                    "fontSize": 15,
                    "fontWeight": "normal",
                    "color": "#595959",
                    "lineHeight": 24
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": "profile",
        "name": "我的",
        "description": "个人中心",
        "componentTree": {
          "type": "safeArea",
          "children": [
            {
              "type": "navBar",
              "title": "我的",
              "titleStyle": {
                "fontSize": 18,
                "fontWeight": "semibold",
                "color": "#000000"
              },
              "backgroundColor": "#FFFFFF",
              "borderless": false,
              "height": 44
            },
            {
              "type": "card",
              "elevation": 1,
              "borderRadius": 8,
              "backgroundColor": "#FFFFFF",
              "padding": {
                "top": 20,
                "bottom": 20,
                "left": 20,
                "right": 20
              },
              "children": [
                {
                  "type": "avatarText",
                  "title": "张三",
                  "subtitle": "在线",
                  "avatar": "/avatars/user.png",
                  "accessory": "arrow"
                },
                {
                  "type": "list",
                  "items": [
                    {
                      "type": "iconText",
                      "title": "账户设置",
                      "icon": "/icons/account.png",
                      "accessory": "arrow",
                      "onClickAction": {
                        "type": "showToast",
                        "toast": {
                          "message": "打开账户设置",
                          "icon": "info"
                        }
                      }
                    },
                    {
                      "type": "iconText",
                      "title": "消息通知",
                      "icon": "/icons/notification.png",
                      "accessory": "arrow",
                      "onClickAction": {
                        "type": "showToast",
                        "toast": {
                          "message": "打开消息通知",
                          "icon": "info"
                        }
                      }
                    },
                    {
                      "type": "iconText",
                      "title": "关于我们",
                      "icon": "/icons/about.png",
                      "accessory": "arrow",
                      "onClickAction": {
                        "type": "showToast",
                        "toast": {
                          "message": "打开关于我们",
                          "icon": "info"
                        }
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    ],
    "tabBar": {
      "type": "tabBar",
      "selectedIndex": 0,
      "backgroundColor": "#FFFFFF",
      "height": 56,
      "showDivider": true,
      "items": [
        {
          "title": "首页",
          "icon": "/icons/home.png",
          "selectedIcon": "/icons/home-active.png",
          "pageId": "home"
        },
        {
          "title": "交易",
          "icon": "/icons/transaction.png",
          "selectedIcon": "/icons/transaction-active.png",
          "pageId": "transaction-query"
        },
        {
          "title": "我的",
          "icon": "/icons/profile.png",
          "selectedIcon": "/icons/profile-active.png",
          "pageId": "profile"
        }
      ]
    },
    "router": {
      "mode": "tab",
      "initialPageId": "home",
      "historyLimit": 10,
      "transition": {
        "type": "push",
        "duration": 300
      }
    },
    "theme": {
      "primaryColor": "#1890FF",
      "secondaryColor": "#52C41A",
      "errorColor": "#FF4D4F",
      "warningColor": "#FAAD14",
      "textColor": "#000000",
      "backgroundColor": "#FFFFFF"
    },
    "modals": {
      "confirm-delete": {
        "type": "modal",
        "title": "确认删除",
        "content": "确定要删除这条记录吗？此操作不可恢复。",
        "closable": true,
        "maskClosable": true,
        "width": 320,
        "backgroundColor": "#FFFFFF",
        "buttons": [
          {
            "text": "取消",
            "type": "secondary"
          },
          {
            "text": "确认删除",
            "type": "danger",
            "onClickAction": {
              "type": "request",
              "request": {
                "url": "/api/delete-record",
                "method": "DELETE",
                "successAction": {
                  "type": "showToast",
                  "toast": {
                    "message": "删除成功",
                    "icon": "success"
                  }
                },
                "errorAction": {
                  "type": "showToast",
                  "toast": {
                    "message": "删除失败",
                    "icon": "error"
                  }
                }
              }
            }
          }
        ]
      }
    }
  }
}
